@model Clinica.Models.Factura

@{
    ViewData["Title"] = "Factura";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdExpediente" class="control-label"></label>
                <!--
                <select asp-for="IdExpediente" class ="form-control" asp-items="ViewBag.IdExpediente"></select>
                -->
                <select id="secreto" asp-for="IdExpediente" class ="form-control" >
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Facturar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

</body>
</html>
