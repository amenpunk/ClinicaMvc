@model IEnumerable<Clinica.Models.Cita>

@{
    ViewData["Title"] = "Cita index";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h1>Citas MÃ©dica</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                Paciente
            </th>

            <th>
                Informacion de la Cita
            </th>
             
            <th>
                Operacion
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td class="ciente" value="@Html.DisplayFor(modelItem => item.IdPacienteNavigation.IdPaciente)">
            
            </td>

            <td>
            <p> 
            <strong>
                Estado:
            </strong>

            @{
                switch(item.Estado){
                    case "1": <text>Pendiente</text>; break;
                    case "2": <text>No Confirmada</text>; break;
                    case "3": <text>Confirmada</text>; break;
                    case "4": <text>En sala de Espera</text>; break;
                    case "5": <text>En Consulta</text>; break;
                    case "6": <text>Atendida</text>; break;
                    case "7": <text>Cancelada</text>; break;
                    default: break;
                }
            }
            </p> 
            <p>
                <strong>Fecha:</strong>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </p>
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinal)
            </td>
            --> 
            <td>
                <a  class="btn btn-info btn-block regular-link" asp-action="Edit" asp-route-id="@item.IdCita">Edit</a>
                <a  class="btn btn-info btn-block regular-link btn-warning" asp-action="Details" asp-route-id="@item.IdCita">Details</a>
                <a  class=" btn btn-info btn-block regular-link btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCita">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
