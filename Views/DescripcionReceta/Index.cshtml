@model IEnumerable<Clinica.Models.DesReceta>

@{
    ViewData["Title"] = "Detalle Receta";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dosis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRecetaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRecetaNavigation.IdReceta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDescripcion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDescripcion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDescripcion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
