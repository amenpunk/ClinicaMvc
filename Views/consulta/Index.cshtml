@model IEnumerable<Clinica.Models.Consulta>

@{
    ViewData["Title"] = "Consulta";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a class="btn btn-primary" asp-action="Create">Crear Nueva</a>
</p>
<hr style="width:100%">
<p class="h5">Operaciones</p>
<p>
    <a class="btn btn-dark" asp-controller="OrdenLab" asp-action="Create">Orden de laboratorio</a>
    <a class="btn btn-dark" asp-controller="Diagnostico" asp-action="Create">Diagnostico</a>
    <a class="btn btn-dark" asp-controller="Receta" asp-action="Create">Receta</a>
</p>

<table class="table table-bordered table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Asunto)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Seguro
            </th>
            
            <th>
                Paciente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoCaja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asunto)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @{

                    if( item.SeguroMedico == 1){
                        <text>Si</text>
                    }else{
                        <text>No</text>
                    }
                }
            </td>
            
            
            
            <td>
                @Html.DisplayFor(modelItem => item.IdExpedienteNavigation.IdExpediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoCaja)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdConsulta">Edit</a>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.IdConsulta">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdConsulta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
