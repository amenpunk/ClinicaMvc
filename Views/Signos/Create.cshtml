@model Clinica.Models.Signos

@{
    ViewData["Title"] = "Signos";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Signos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Estatura" class="control-label">Estatura</label>
                <input type="number"  step=0.1 asp-for="Estatura" class="form-control" />
                <span asp-validation-for="Estatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input  type="number"  step=0.1 asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temp" class="control-label">Temperatura</label>
                <input  type="number"  step=0.1 asp-for="Temp" class="form-control" />
                <span asp-validation-for="Temp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pulso" class="control-label"></label>
                <input  type="number"  step=0.1 asp-for="Pulso" class="form-control" />
                <span asp-validation-for="Pulso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PresionArt" class="control-label">Presion Arterial</label>
                <input  type="number"  step=0.1 asp-for="PresionArt" class="form-control" />
                <span asp-validation-for="PresionArt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrecCardiaca" class="control-label">Frecuencia Cardiaca</label>
                <input  type="number"  step=0.1 asp-for="FrecCardiaca" class="form-control" />
                <span asp-validation-for="FrecCardiaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrecRespiratoria" class="control-label">Frecuencia Respiratoria</label>
                <input  type="number"  step=0.1  asp-for="FrecRespiratoria" class="form-control" />
                <span asp-validation-for="FrecRespiratoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEnfermera" class="control-label">Enfermera</label>
                <select asp-for="IdEnfermera" class ="form-control" asp-items="ViewBag.IdEnfermera"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdConsulta" class="control-label"></label>
                <select asp-for="IdConsulta" class ="form-control" asp-items="ViewBag.IdConsulta"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

</body>
</html>
