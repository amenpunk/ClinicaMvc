<h1>Repoerte de expediente</h1>
<form action="http://localhost/reportes/pdf.php" method="GET">

    <div class="form-group">
    <label class="control-label">Paciente</label>
    <input type="number" class="form-control" name="id_paciente">
    </div>

    <div class="form-group">
    <label class="control-label">Expediente</label>
    <input type="number" class="form-control" name="id_exp">
    </div>

    <div class="form-group">
    <input type="submit" class="btn btn-dark"value="Generar Reporte">
    </div>

</form>

